{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-14 bg-[var(--brand-light)] min-h-screen flex items-center">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8 border border-[var(--card-border)]">
            <h2 class="text-3xl font-bold text-center mb-6 text-[var(--brand-heading)]">Login to BlackRoar</h2>
            
            {% if session.flash.success %}
                <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                    {{ session.flash.success }}
                </div>
            {% endif %}

            {% if session.flash.error %}
                <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                    {{ session.flash.error }}
                </div>
            {% endif %}

            {% if errors.login %}
                <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                    {{ errors.login }}
                </div>
            {% endif %}

            <form method="POST" action="{{ app_url }}/login" class="space-y-5">
                <input type="hidden" name="_token" value="{{ csrf_token }}">
                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium mb-2">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        value="{{ old.email }}" 
                        class="w-full px-4 py-3 rounded-lg border border-[var(--card-border)] focus:border-[var(--brand-primary)] focus:ring-2 focus:ring-[var(--brand-primary)] outline-none"
                        placeholder="your@email.com"
                        required
                    />
                    {% if errors.email %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                    {% endif %}
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-sm font-medium mb-2">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="w-full px-4 py-3 rounded-lg border border-[var(--card-border)] focus:border-[var(--brand-primary)] focus:ring-2 focus:ring-[var(--brand-primary)] outline-none"
                        placeholder="••••••••"
                        required
                    />
                    {% if errors.password %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                    {% endif %}
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between">
                    <label class="flex items-center">
                        <input type="checkbox" name="remember" class="rounded border-gray-300 text-[var(--brand-primary)] focus:ring-[var(--brand-primary)]">
                        <span class="ml-2 text-sm">Remember me</span>
                    </label>
                    <a href="{{ app_url }}/forgot-password" class="text-sm link-accent">Forgot Password?</a>
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="w-full py-3 px-4 bg-[var(--brand-navbar)] hover:bg-black text-white font-semibold rounded-lg transition duration-200"
                >
                    Login
                </button>
            </form>

            <!-- Register Link -->
            <p class="mt-6 text-center text-sm">
                Don't have an account? 
                <a href="{{ app_url }}/register" class="link-accent font-medium">Register here</a>
            </p>
        </div>
    </div>
</section>
{% endblock %}