{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-10 bg-[var(--body-bg)] min-h-screen">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
            <div>
                <p class="text-sm uppercase text-gray-500 tracking-wide">My Wishlist</p>
                <h1 class="text-3xl md:text-4xl font-bold text-[var(--brand-heading)]">Saved For Later</h1>
                <p class="text-gray-500 mt-2 text-sm">Products you love, ready whenever you are.</p>
            </div>
            <a href="{{ app_url }}/products" class="inline-flex items-center gap-2 text-sm font-semibold text-[var(--brand-primary)] hover:text-[var(--brand-primary-hover)]">
                Continue shopping â†’
            </a>
        </div>

        {% if items|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for item in items %}
            <div class="bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden border border-[var(--card-border)] flex flex-col">
                <a href="{{ app_url }}/product/{{ item.slug }}" class="aspect-square bg-[var(--card-bg-alt)] flex items-center justify-center overflow-hidden block">
                    {% if item.image_path %}
                    <img src="{{ item.image_path }}" alt="{{ item.name }}" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy">
                    {% else %}
                    <span class="text-5xl">ðŸ“¦</span>
                    {% endif %}
                </a>
                <div class="p-5 flex-1 flex flex-col gap-4">
                    <div>
                        <h3 class="font-semibold text-[var(--brand-text)] line-clamp-2 mb-1">{{ item.name }}</h3>
                        <p class="text-sm text-gray-500">Added {{ item.created_at|date('d M Y') }}</p>
                    </div>
                    <div class="flex items-center gap-2">
                        {% if item.sale_price %}
                        <span class="text-xl font-bold text-red-600">â‚¹{{ item.sale_price }}</span>
                        <span class="text-sm text-gray-500 line-through">â‚¹{{ item.price }}</span>
                        {% else %}
                        <span class="text-xl font-bold text-[var(--brand-text)]">â‚¹{{ item.price }}</span>
                        {% endif %}
                    </div>
                    <div class="flex flex-col gap-3 mt-auto">
                        <form action="{{ app_url }}/cart/add" method="POST" class="w-full">
                            <input type="hidden" name="_token" value="{{ csrf_token }}">
                            <input type="hidden" name="product_id" value="{{ item.product_id }}">
                            <button type="submit" class="w-full px-4 py-2 rounded-lg bg-[var(--brand-primary)] text-white font-semibold hover:bg-[var(--brand-primary-hover)] transition">
                                Add to cart
                            </button>
                        </form>
                        <form action="{{ app_url }}/wishlist/remove-form" method="POST" class="w-full">
                            <input type="hidden" name="_token" value="{{ csrf_token }}">
                            <input type="hidden" name="product_id" value="{{ item.product_id }}">
                            <button type="submit" class="w-full px-4 py-2 rounded-lg border border-[var(--card-border)] text-sm font-semibold text-gray-600 hover:bg-[var(--card-bg-alt)] transition">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="bg-white rounded-2xl shadow p-12 text-center">
            <div class="text-6xl mb-4">ðŸ’›</div>
            <h2 class="text-2xl font-bold mb-2 text-[var(--brand-text)]">Wishlist is empty</h2>
            <p class="text-gray-600 mb-6">Save your favourites here so you can grab them when youâ€™re ready.</p>
            <a href="{{ app_url }}/products" class="inline-block px-6 py-3 bg-[var(--brand-primary)] text-white rounded-lg font-bold hover:bg-[var(--brand-primary-hover)] transition">
                Discover products
            </a>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}

