{% extends "base.twig" %}

{% block title %}Add Category{% endblock %}

{% block content %}
<section class="container mx-auto px-4 py-8">
    
    <h1 class="text-2xl font-bold mb-6">Add Category</h1>

    {% if errors %}
        <div class="bg-red-100 text-red-700 p-3 mb-4 rounded">
            <ul class="list-disc pl-5">
                {% for err in errors %}
                    <li>{{ err }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form action="{{ app_url }}/admin/categories" 
          method="post" 
          enctype="multipart/form-data"
          class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white p-6 rounded shadow">

        <input type="hidden" name="_token" value="{{ csrf_token }}">

        <!-- Name -->
        <div>
            <label class="block font-semibold mb-2">Name</label>
            <input type="text" name="name" 
                   value="{{ old.name ?? '' }}"
                   class="border p-3 w-full rounded" required>
        </div>

        <!-- Slug -->
        <div>
            <label class="block font-semibold mb-2">Slug</label>
            <input type="text" name="slug" 
                   value="{{ old.slug ?? '' }}"
                   class="border p-3 w-full rounded">
        </div>

        <!-- Display Order -->
        <div>
            <label class="block font-semibold mb-2">Display Order</label>
            <input type="number" name="display_order"
                   value="{{ old.display_order ?? 0 }}"
                   class="border p-3 w-full rounded">
        </div>

        <!-- Active Checkbox -->
        <div class="flex items-center">
            <label class="flex items-center space-x-2">
                <input type="checkbox" name="is_active" checked>
                <span>Active</span>
            </label>
        </div>

        <!-- Image Upload -->
        <div class="md:col-span-2">
            <label class="block font-semibold mb-2">Category Image</label>

            <input type="file" 
                   name="image" 
                   accept="image/*"
                   onchange="previewImage(event)"
                   class="border p-3 w-full rounded">

            <div class="mt-4">
                <img id="imgPreview" 
                     src="#" 
                     style="display:none;"
                     class="w-40 h-40 object-cover rounded border" />
            </div>
        </div>

        <div class="md:col-span-2 flex justify-end">
            <button class="bg-black text-white px-6 py-3 rounded font-semibold">
                Create Category
            </button>
        </div>
    </form>
</section>

<script>
function previewImage(event) {
    const img = document.getElementById('imgPreview');
    img.src = URL.createObjectURL(event.target.files[0]);
    img.style.display = 'block';
}
</script>

{% endblock %}
