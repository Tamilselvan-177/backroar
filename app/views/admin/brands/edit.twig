{% extends "base.twig" %}

{% block title %}Edit Brand{% endblock %}

{% block content %}
<section class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Edit Brand</h1>
    <form action="{{ app_url }}/admin/brands/{{ brand.id }}" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white p-6 rounded shadow">
        <input type="hidden" name="_token" value="{{ csrf_token }}">
        <div>
            <label class="block font-semibold mb-2">Name</label>
            <input type="text" name="name" value="{{ old.name ?? brand.name }}" class="border p-2 w-full" />
        </div>
        <div>
            <label class="block font-semibold mb-2">Slug</label>
            <input type="text" name="slug" value="{{ old.slug ?? brand.slug }}" class="border p-2 w-full" />
        </div>
        <div>
            <label class="block font-semibold mb-2">Display Order</label>
            <input type="number" name="display_order" value="{{ old.display_order ?? brand.display_order }}" class="border p-2 w-full" />
        </div>
        <div class="flex items-center">
            <label class="flex items-center space-x-2"><input type="checkbox" name="is_active" {% if brand.is_active %}checked{% endif %}><span>Active</span></label>
        </div>
        <div class="md:col-span-2 flex justify-end">
            <button class="bg-black text-white px-4 py-2 rounded">Save</button>
        </div>
    </form>
</section>
{% endblock %}

