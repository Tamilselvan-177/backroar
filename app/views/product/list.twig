{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-10 bg-[var(--body-bg)]">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold text-[var(--brand-heading)]">All Products</h1>
                <p class="text-gray-500 text-sm mt-2">Browse the latest arrivals and best sellers from BlackRoar.</p>
            </div>
            <form method="GET" class="flex flex-col sm:flex-row gap-3 items-stretch sm:items-center">
                <label class="text-sm text-gray-500">Sort by</label>
                <select name="sort" class="px-4 py-2 border border-[var(--card-border)] rounded-lg focus:ring-2 focus:ring-[var(--brand-primary)] outline-none" onchange="this.form.submit()">
                    <option value="p.created_at DESC" {% if pagination.sort == 'p.created_at DESC' %}selected{% endif %}>Newest First</option>
                    <option value="p.price ASC" {% if pagination.sort == 'p.price ASC' %}selected{% endif %}>Price: Low to High</option>
                    <option value="p.price DESC" {% if pagination.sort == 'p.price DESC' %}selected{% endif %}>Price: High to Low</option>
                    <option value="p.name ASC" {% if pagination.sort == 'p.name ASC' %}selected{% endif %}>Name: A to Z</option>
                </select>
            </form>
        </div>

        {% if products|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for product in products %}
            <a href="{{ app_url }}/product/{{ product.slug }}" class="block bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden border border-[var(--card-border)]">
                <div class="aspect-square bg-[var(--card-bg-alt)] flex items-center justify-center overflow-hidden">
                    {% if product.image_path %}
                        <img src="{{ product.image_path }}" alt="{{ product.name }}" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" decoding="async">
                    {% else %}
                        <span class="text-4xl">üì¶</span>
                    {% endif %}
                </div>
                <div class="p-4 space-y-2">
                    {% if product.brand_name %}
                    <p class="text-xs uppercase tracking-wide text-gray-500">{{ product.brand_name }}</p>
                    {% endif %}
                    <h3 class="font-semibold text-[var(--brand-text)] line-clamp-2">{{ product.name }}</h3>
                    <div class="flex items-center gap-2">
                        {% if product.sale_price %}
                        <span class="text-lg font-bold text-red-600">‚Çπ{{ product.sale_price }}</span>
                        <span class="text-sm text-gray-500 line-through">‚Çπ{{ product.price }}</span>
                        {% else %}
                        <span class="text-lg font-bold text-[var(--brand-text)]">‚Çπ{{ product.price }}</span>
                        {% endif %}
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        {% else %}
        <div class="bg-white rounded-xl shadow p-10 text-center">
            <div class="text-6xl mb-4">üõçÔ∏è</div>
            <h2 class="text-2xl font-bold mb-2 text-[var(--brand-text)]">No products found</h2>
            <p class="text-gray-600 mb-6">Please check back later or explore other categories.</p>
            <a href="{{ app_url }}/categories" class="inline-block px-6 py-3 bg-[var(--brand-primary)] text-white rounded-lg font-semibold hover:bg-[var(--brand-primary-hover)]">Browse Categories</a>
        </div>
        {% endif %}

        {% if pagination.total_pages > 1 %}
        <div class="flex justify-center gap-2 mt-10">
            {% for page in 1..pagination.total_pages %}
                {% if page == pagination.current_page %}
                <span class="px-4 py-2 bg-[var(--brand-primary)] text-white rounded-lg font-semibold">{{ page }}</span>
                {% else %}
                <a href="?page={{ page }}{% if pagination.sort %}&sort={{ pagination.sort|url_encode }}{% endif %}" class="px-4 py-2 border border-[var(--card-border)] rounded-lg hover:bg-[var(--card-bg-alt)] transition">{{ page }}</a>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}

